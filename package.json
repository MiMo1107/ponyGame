{
  "name": "pony-game",
  "version": "1.0.0",
  "description": "Pony game based on Trust Pilot API",
  "license": "MIT",
  "scripts": {
    "copy-assets": "mkdir dist/ && mkdir dist/assets/ && ncp assets/ dist/assets/",
    "build": "npm run clean-dist && npm run copy-assets && webpack -p --config=configs/webpack/prod.js",
    "clean-dist": "rm -f -r -d dist",
    "lint": "tslint './src/**/*.ts*' --format stylish --force",
    "start": "npm run build && node express.js",
    "start-dev": "webpack-dev-server --config=configs/webpack/dev.js",
    "test": "jest --watch --coverage --config=configs/jest.json"
  },
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@types/node": "^11.15.2",
    "@types/react": "^16.9.13",
    "acorn": "^6.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "axios": "^0.18.1",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "express": "^4.17.1",
    "html-webpack-plugin": "^3.2.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "tocca": "^2.0.4",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "@types/jest": "^24.0.23",
    "@types/react-dom": "^16.9.4",
    "file-loader": "^3.0.1",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.9.0",
    "react-addons-test-utils": "^15.6.2",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.9.0"
  }
}
